<?xml version="1.0" encoding="UTF-8"?>
<project name="module_patternspace" default="compile.module.patternspace">
  <dirname property="module.patternspace.basedir" file="${ant.file.module_patternspace}"/>
  
  <property name="module.jdk.home.patternspace" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.patternspace" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.patternspace" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.patternspace" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="patternspace.output.dir" value="${module.patternspace.basedir}/target/classes"/>
  <property name="patternspace.testoutput.dir" value="${module.patternspace.basedir}/target/test-classes"/>
  
  <path id="patternspace.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="patternspace.module.production.classpath">
    <path refid="${module.jdk.classpath.patternspace}"/>
    <path refid="library.cn.apiclub.third:jgap:3.6.2.classpath"/>
  </path>
  
  <path id="patternspace.runtime.production.module.classpath">
    <pathelement location="${patternspace.output.dir}"/>
    <path refid="library.cn.apiclub.third:jgap:3.6.2.classpath"/>
  </path>
  
  <path id="patternspace.module.classpath">
    <path refid="${module.jdk.classpath.patternspace}"/>
    <pathelement location="${patternspace.output.dir}"/>
    <path refid="library.cn.apiclub.third:jgap:3.6.2.classpath"/>
  </path>
  
  <path id="patternspace.runtime.module.classpath">
    <pathelement location="${patternspace.testoutput.dir}"/>
    <pathelement location="${patternspace.output.dir}"/>
    <path refid="library.cn.apiclub.third:jgap:3.6.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.patternspace">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.patternspace">
    <patternset refid="excluded.from.module.patternspace"/>
  </patternset>
  
  <path id="patternspace.module.sourcepath">
    <dirset dir="${module.patternspace.basedir}">
      <include name="data"/>
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="patternspace.module.test.sourcepath">
    <dirset dir="${module.patternspace.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.patternspace" depends="compile.module.patternspace.production,compile.module.patternspace.tests" description="Compile module PatternSpace"/>
  
  <target name="compile.module.patternspace.production" depends="register.custom.compilers" description="Compile module PatternSpace; production classes">
    <mkdir dir="${patternspace.output.dir}"/>
    <javac2 destdir="${patternspace.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.patternspace}/javac">
      <compilerarg line="${compiler.args.patternspace}"/>
      <bootclasspath refid="patternspace.module.bootclasspath"/>
      <classpath refid="patternspace.module.production.classpath"/>
      <src refid="patternspace.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.patternspace"/>
    </javac2>
    
    <copy todir="${patternspace.output.dir}">
      <fileset dir="${module.patternspace.basedir}/data">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.patternspace.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.patternspace.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.patternspace.tests" depends="register.custom.compilers,compile.module.patternspace.production" description="compile module PatternSpace; test classes" unless="skip.tests">
    <mkdir dir="${patternspace.testoutput.dir}"/>
    <javac2 destdir="${patternspace.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.patternspace}/javac">
      <compilerarg line="${compiler.args.patternspace}"/>
      <bootclasspath refid="patternspace.module.bootclasspath"/>
      <classpath refid="patternspace.module.classpath"/>
      <src refid="patternspace.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.patternspace"/>
    </javac2>
    
    <copy todir="${patternspace.testoutput.dir}">
      <fileset dir="${module.patternspace.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.patternspace" description="cleanup module">
    <delete dir="${patternspace.output.dir}"/>
    <delete dir="${patternspace.testoutput.dir}"/>
  </target>
</project>